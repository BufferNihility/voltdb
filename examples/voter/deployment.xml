<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<deployment>
    <cluster hostcount="2" kfactor="1" sitesperhost="4"/>
    <ssl/>
    <httpd enabled="true">
        <jsonapi enabled="true"/>
    </httpd>
    <snapshot enabled="false"/>
    <partition-detection enabled="false" />
    <heartbeat timeout="15" />
    <export>
        <configuration enabled="false" target="ABC" type="kafka">
              <property name="topic.prefix"></property>
              <property name="retry.backoff.ms">5000</property>
              <property name="producer.type">async</property>
              <property name="skipinternals">true</property>
              <property name="message.send.max.retries">10</property>
              <property name="bootstrap.servers">volt13a:9092</property>
              <property name="acks">all</property>
        </configuration>
    </export>
    <commandlog enabled="false">
        <frequency/>
    </commandlog>
    <systemsettings>
        <temptables/>
        <snapshot/>
        <elastic/>
        <query/>
        <procedure/>
        <resourcemonitor>
            <memorylimit/>
        </resourcemonitor>
    </systemsettings>
    <security/>
</deployment>
